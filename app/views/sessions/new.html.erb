<section >

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6">
      <%= form_tag '/login' do %>

        <p><b>Email</b></p>
        <div class="form-group">
        <%= text_field_tag :email %>
        </div>
        
        <p><b>Password</b></p>
        <div class="form-group">
          <%= password_field_tag :password %>
        </div>

        <%= submit_tag 'Login', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>